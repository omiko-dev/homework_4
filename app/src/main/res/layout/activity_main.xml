<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingHorizontal="32dp"
    android:fontFamily="@font/main_font"
    android:gravity="center|start"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="43dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/rectangle_bg_two"
        app:cardElevation="6dp"
        android:outlineSpotShadowColor="@color/rectangle_bg_one"
        android:background="@color/rectangle_bg_one"
        android:layout_marginBottom="30dp"
        tools:ignore="UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        android:fontFamily="@font/main_font"
        android:textColor="@color/title_color"
        android:textSize="42sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lets_introduce"
        android:fontFamily="@font/main_font"
        android:textColor="@color/hint_color"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

        <View
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:background="@drawable/user_icon">

        </View>

        <androidx.appcompat.widget.AppCompatEditText
            android:maxLines="1"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:hint="@string/et_full_name"
            android:fontFamily="@font/main_font"
            android:textColorHint="@color/hint_color"
            android:backgroundTint="@color/edit_text_tint_color"
            android:layout_marginStart="20dp"
            android:layout_height="50dp"
            tools:ignore="VisualLintTextFieldSize" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:background="@drawable/user_icon">
        </View>

        <androidx.appcompat.widget.AppCompatEditText
            android:maxLines="1"
            android:layout_width="match_parent"
            android:hint="@string/et_user_name"
            android:fontFamily="@font/main_font"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:backgroundTint="@color/edit_text_tint_color"
            android:layout_marginStart="20dp"
            android:layout_height="50dp"
            tools:ignore="VisualLintTextFieldSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="58dp"
            android:layout_height="59dp"
            android:background="@drawable/back_arrow"
            tools:ignore="SpeakableTextPresentCheck" />

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="@color/rectangle_bg_two"
            android:fontFamily="@font/main_font"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:icon="@drawable/right_arrow_icon"
            app:iconGravity="textEnd"
            app:iconTint="@color/white" />

    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>